<h1>Elastic search for Artworks</h1>

<%= form_for :search_artworks, url: search_artworks_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_artworks].presence && params[:search_artworks][:query] %>
  <%= form.submit 'Search' %>
<% end %>

