<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="utf-8">
		<title>Artventory</title>
	</head>
	<body>
		<h1>Artventory V0.0.0.0.0.1a</h1>

		<% if user_signed_in? %>
			<li>
			<%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>        
			</li>
		<% end %>

		<%= link_to artworks_new_path do %>
			<h2>New Artwork</h2>
		<% end %>

  <h2> Press <%= link_to 'here', search_artworks_path %> to search for artowkrs. </h2>


	  <p>Database entries go here:</h1>
	  <% @artworks.each do |artwork| %>
	    </br>
	    <div >
	        <%= artwork.title %>
	    </div>
	    <div >
	      <%= artwork.price %>
	    </div>
      <%= link_to artworks_edit_path(artwork) do %>
  			<h2>Update Artwork</h2>
  		<% end %>
			<%= link_to artworks_delete_path(artwork) do %>
				<h2>Delete Artwork</h2>
			<% end %>
	  <% end %>
	</body>
</html>
